{% macro navbar(selected) %}
<nav>
	{{ navbar_item("/", "root@solrunners ~#") }}
	{{ navbar_item("/", "home", selected) }}
	{{ navbar_item("/blog", "blog", selected) }}

    <!-- <span class="pwrln pwr-sp"></span> -->
